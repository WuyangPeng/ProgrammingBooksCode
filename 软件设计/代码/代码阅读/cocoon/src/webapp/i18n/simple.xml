				<i18n:param name="two"><i18n:text>two</i18n:text></i18n:param>
				<i18n:param name="third">baby</i18n:param>
				<i18n:param name="forth"> ~ </i18n:param>
			</i18n:translate>
		</para>
			<para title="Number formatting (not translated)" name="article" i18n:attr="name">
				<i18n:translate>
