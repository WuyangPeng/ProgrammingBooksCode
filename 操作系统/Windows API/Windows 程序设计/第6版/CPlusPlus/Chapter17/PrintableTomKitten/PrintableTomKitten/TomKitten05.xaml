<UserControl
    x:Class="PrintableTomKitten.TomKitten05"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid VerticalAlignment="Center"
          MaxWidth="640">
        <StackPanel>
            <TextBlock Style="{StaticResource frontMatterTextStyle}"
                       FontSize="48">
                THE TALE OF<LineBreak />
                <Run FontSize="96">TOM KITTEN</Run><LineBreak />
                <Run FontSize="24">BY</Run><LineBreak />
                BEATRIX POTTER<LineBreak />
                <Italic FontSize="24">
                Author of<LineBreak />
                "The Tale of Peter Rabbit", &amp;c.</Italic>
            </TextBlock>
        
            <Image Source="Images/tom05.jpg" Style="{StaticResource imageStyle}" />

            <TextBlock Style="{StaticResource frontMatterTextStyle}">
                FREDERICK WARNE<LineBreak />
                First published 1907
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
